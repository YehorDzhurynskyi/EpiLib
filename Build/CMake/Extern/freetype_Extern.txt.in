cmake_minimum_required(VERSION 2.8.2)

project(freetype-download NONE)

include(ExternalProject)
ExternalProject_Add(freetype
    GIT_REPOSITORY      https://github.com/aseprite/freetype2
    GIT_TAG             VER-2-10-0
    SOURCE_DIR          "${CMAKE_CURRENT_BINARY_DIR}/freetype-extern/src"
    BINARY_DIR          "${CMAKE_CURRENT_BINARY_DIR}/freetype-extern/build"

    GIT_SHALLOW         1
    GIT_PROGRESS        1

    CONFIGURE_COMMAND   ""
    BUILD_COMMAND       ""
    INSTALL_COMMAND     ""
    TEST_COMMAND        ""
)
