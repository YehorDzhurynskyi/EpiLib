cmake_minimum_required(VERSION 2.8.2)

project(VulkanMemoryAllocator-extern NONE)

include(ExternalProject)
ExternalProject_Add(VulkanMemoryAllocator
    GIT_REPOSITORY      https://github.com/GPUOpen-LibrariesAndSDKs/VulkanMemoryAllocator
    GIT_TAG             master # TODO: at this time, only master has CMake support, need to switch to version 3.0.0 whenever it comes
    SOURCE_DIR          "${CMAKE_CURRENT_BINARY_DIR}/VulkanMemoryAllocator/src"
    BINARY_DIR          "${CMAKE_CURRENT_BINARY_DIR}/VulkanMemoryAllocator/build"

    GIT_SHALLOW         1
    GIT_PROGRESS        1

    CONFIGURE_COMMAND   ""
    BUILD_COMMAND       ""
    INSTALL_COMMAND     ""
    TEST_COMMAND        ""
)
