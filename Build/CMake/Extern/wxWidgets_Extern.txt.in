cmake_minimum_required(VERSION 2.8.2)

project(wxWidgets-extern NONE)

include(ExternalProject)
ExternalProject_Add(wxWidgets
    GIT_REPOSITORY      https://github.com/wxWidgets/wxWidgets.git
    GIT_TAG             v3.1.3
    SOURCE_DIR          "${CMAKE_CURRENT_BINARY_DIR}/wxWidgets-extern/src"
    BINARY_DIR          "${CMAKE_CURRENT_BINARY_DIR}/wxWidgets-extern/build"

    GIT_SHALLOW         1
    GIT_PROGRESS        1

    CONFIGURE_COMMAND   ""
    BUILD_COMMAND       ""
    INSTALL_COMMAND     ""
    TEST_COMMAND        ""
)
