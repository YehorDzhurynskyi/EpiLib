class uiWidget
{
    [Virtual]
    {
        epiVec2f Position;

        epiFloat Width;
        epiFloat Height;

        [ReadOnly, ReadCallback("SuppressRef")]
        {
            epiVec2f MouseLocalUICoord;
        }
    }

    epiRect2f BBox;

    [ReadOnly]
    {
        uiWidget* Parent;
        epiPtrArray<uiWidget> Children;
    }
};
