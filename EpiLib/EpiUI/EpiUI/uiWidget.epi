class uiWidget
{
    [Virtual]
    {
        [ReadCallback("SuppressRef")]
        epiRect2f BBox;

        epiFloat Width;
        epiFloat Height;

        [ReadOnly, ReadCallback("SuppressRef")]
        {
            epiVec2f MouseLocalUICoord;
        }
    }

    epiVec2f Position;
    epiVec2f Size;

    [ReadOnly]
    {
        uiWidget* Parent;
        epiPtrArray<uiWidget> Children;
    }

    uiLayout* Layout;
};
