enum gfxShaderType
{
    None,
    Vertex,
    Geometry,
    Pixel
};

class gfxShader
{
    [Virtual, ReadOnly]
    epiBool IsCreated;

    [Transient]
    epiU32 ShaderID;
};

class gfxShaderProgram : gfxBindable
{
    [Virtual, ReadOnly]
    epiBool IsCreated;

    [Transient]
    epiU32 ProgramID;
};
