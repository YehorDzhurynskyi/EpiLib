class gfxQueueSubmitInfo
{
    [ReadOnly]
    {
        epiArray<gfxSemaphore> WaitSemaphores;
        epiArray<gfxPipelineStage> WaitDstStageMasks;
        epiArray<gfxSemaphore> SignalSemaphores;
        epiArray<gfxCommandBuffer> CommandBuffers;
    }
};

class gfxQueuePresentInfo
{
    [ReadOnly]
    {
        epiArray<gfxSemaphore> WaitSemaphores;
        epiPtrArray<gfxSwapChain> SwapChains; # TODO: add a docstring (using Ptr because of cyclic include)
        epiArray<epiU32> SwapChainImageIndices;
    }
};

class gfxQueue
{
    [Virtual, ReadOnly]
    {
        gfxQueueType Type;
        epiFloat Priority;
    }
};
