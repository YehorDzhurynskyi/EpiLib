enum gfxVertexBufferUsage
{
    StaticRead,
    StaticDraw,
    DynamicRead,
    DynamicDraw,
    StreamRead,
    StreamDraw
};

enum gfxVertexBufferMapAccess
{
    Read,
    Write,
    ReadWrite
};

class gfxVertexBuffer : gfxBindable
{
    [Virtual, ReadOnly]
    epiBool IsCreated;

    [Transient]
    epiU32 ID;

    epiSize_t Capacity;
};
