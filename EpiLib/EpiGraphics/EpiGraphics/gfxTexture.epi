enum gfxTextureType
{
    None,
    Texture2D
};

enum gfxTextureFormat
{
    R,
    RG,
    RGB,
    BGR,
    RGBA,
    BGRA
};

enum gfxTexturePixelType
{
    BYTE,
    UBYTE,
    SHORT,
    USHORT,
    INT,
    UINT
};

class gfxTexture : gfxBindable
{
    [ReadOnly]
    {
        epiSize_t Width;
        epiSize_t Height;
    }

    [Virtual, ReadOnly]
    epiBool IsCreated;

    [Transient]
    epiU32 ID;
};
