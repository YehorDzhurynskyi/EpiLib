class gfxSwapChainCreateInfo
{
    gfxSurface Surface;
    gfxRenderPass RenderPass;
    gfxQueueFamily QueueFamily;
    gfxSurfaceCapabilities Capabilities;
    gfxSurfaceFormat Format;
    gfxSurfacePresentMode PresentMode;
    epiSize2u Extent;
};

class gfxSwapChain
{
    [Virtual, ReadOnly]
    {
        epiU32 BufferCount;

        [ReadCallback(SuppressRef=true)]
        epiSize2u Extent;
    }

    [ReadOnly]
    epiArray<gfxTextureView> ImageViews;
};
