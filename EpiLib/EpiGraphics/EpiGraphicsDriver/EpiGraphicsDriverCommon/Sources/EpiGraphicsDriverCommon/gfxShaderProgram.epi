enum gfxShaderModuleFrontend
{
    Unknown,
    SPIRV
};

class gfxShaderModuleCreateInfo
{
    gfxShaderStage Stage;

    epiBool CompileFromSource;
    epiArray<epiU8> Code;

    epiString EntryPoint = "main";
};

class gfxShaderModule
{
    [Virtual, ReadOnly]
    {
        gfxShaderStage Stage;
        epiArray<epiU8> Code;

        gfxShaderModuleFrontend Frontend;

        epiString EntryPoint;
    }
};
